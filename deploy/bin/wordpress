#!/usr/bin/perl
use strict;
use lib '/mit/scripts/deploy/bin';
use onserver;

setup();

fetch_uri(
    'wp-admin/setup-config.php',
    {step => 2},
    {dbhost => $sqlhost,
     uname => $sqluser,
     dbname => $sqldb,
     pwd => $sqlpass,
     prefix => '',
     submit => 'Submit',
     step => 2});

my $html = fetch_uri(
    'wp-admin/install.php',
    {step => 2},
    {weblog_title => 'My Blog',
     admin_email => "$human\@mit.edu",
     submit => 'Continue',
     step => 2});
while ($html =~ /<dd><code>(.*)<\/code><\/dd>/g) {
    $admin_username = $admin_password;
    $admin_password = $1;
}

print_login_info();
print "You will also receive this login information at your MIT email address.\n";
press_enter();
